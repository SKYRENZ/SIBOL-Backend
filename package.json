{
  "name": "sibol-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev:local": "dotenv -e .env.local -- cross-env NODE_ENV=development tsx watch src/server.ts",
    "dev:proddb": "cross-env NODE_ENV=development DB_HOST=<PROD_HOST> DB_PORT=<PROD_PORT> DB_USER=<PROD_USER> DB_PASS=<PROD_PASS> DB_NAME=<PROD_DB> tsx watch src/server.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "pretest": "npm run clean",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js --runInBand",
    "test:log": "cross-env MOCK_SQL_LOG=true jest --config jest.config.js --runInBand"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.2",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.19",
    "@types/nodemailer": "^7.0.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
