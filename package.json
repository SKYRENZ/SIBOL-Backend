{
  "name": "sibol-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "dev:local": "echo \"Bun uses .env files by default. Create a .env file and run 'bun dev'\"",
    "dev:proddb": "echo \"Set environment variables directly in your shell and run 'bun dev'\"",
    "clean": "rmdir /s /q dist",
    "build": "bun build ./src/server.ts --outdir ./dist",
    "start": "bun src/server.ts",
    "pretest": "bun run clean",
    "test": "bun test",
    "test:log": "echo \"Bun test does not have a direct equivalent for MOCK_SQL_LOG. Adjust tests if needed.\""
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.2",
    "nodemailer": "^7.0.12",
    "openai": "^6.15.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.19",
    "@types/nodemailer": "^7.0.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "bun-types": "^1.3.3",
    "typescript": "^5.9.3"
  }
}
